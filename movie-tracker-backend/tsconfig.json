{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"experimentalDecorators": true, // Добавьте эту строку
		"emitDecoratorMetadata": true, // Обязательно добавьте для TypeORM
		"outDir": "./dist",
		"baseUrl": "./src",
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		}
	},
	"include": [
		"src/**/*",
		"../movie-tracker-frontend/src/stores",
		"../movie-tracker-frontend/src/axios.js"
	],
	"exclude": ["node_modules"]
}
